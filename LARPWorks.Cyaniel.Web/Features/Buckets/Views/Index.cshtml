@using LARPWorks.Cyaniel.Models
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<LARPWorks.Cyaniel.Features.Buckets.IndexViewModel>
@{
    Layout = "_Layout.cshtml";
}


<div class="content-section">
    <h1>Buckets</h1>
    <p>Below are your active tickets, click one to see more information.</p>

    @foreach (string bucket in Model.Tickets.Keys)
    {
        <h2>@bucket</h2>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Ticket Subject</th>
                <th>Submitter</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody data-link="row" class="rowlink">
            @foreach (BucketTicket ticket in Model.Tickets[bucket])
            {
                <tr>
                    <td><a href="#@ticket.Id"><b>@ticket.Title</b></a></td>
                    <td>@ticket.CreatorId</td>
                    <td>@ticket.Status</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
