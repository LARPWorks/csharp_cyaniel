@using LARPWorks.Cyaniel.Models.Characters
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<LARPWorks.Cyaniel.Features.Characters.CharacterListViewModel>
@{
    Layout = "_Layout.cshtml";
}

<div class="content-section">
    <form class="form-horizontal" method="POST">
        <fieldset>
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <h1>Characters</h1>
                    <hr/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Character Name</th>
                            <th>Experience</th>
                            <th>Created On</th>
                        </tr>
                        </thead>
                        <tbody data-link="row" class="rowlink">
                        @foreach (CharacterModel character in Model.Characters)
                        {
                            <tr>
                                <td><a href="#@character.Id"><b>@character.Name</b></a></td>
                                <td>@character.ExperienceTotal</td>
                                <td>@character.CreationDate</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <input type="button" class="submit" onclick="@Model.CreateCharacter()" />
                </div>
            </div>
        </fieldset>
    </form>
</div>