@using LARPWorks.Cyaniel.Models.Characters
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<LARPWorks.Cyaniel.Features.Characters.CharacterListViewModel>
@{
    Layout = "_Layout.cshtml";
}

<div class="content-section">
    <!-- Create Character Dialog -->
    <div id="createCharacterModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <form class="form-horizontal" method="POST">
                    <fieldset>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="NewCharacterName">Character Name</label>
                                <div class="col-md-8">
                                    <input id="NewCharacterName" name="NewCharacterName" type="text" value="@Model.NewCharacterName"
                                           class="form-control input-md">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group">
                                <button data-dismiss="modal" class="btn btn-danger" type="button">Cancel</button>
                                <button class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <!-- Character List -->
    <form class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <h1>Characters</h1>
                    <hr/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Character Name</th>
                            <th>Experience</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody data-link="row" class="rowlink">
                        @foreach (CharacterModel character in Model.Characters)
                        {
                            <tr>
                                <td><a href="#@character.Id"><b>@character.Name</b></a></td>
                                <td>@character.ExperienceTotal</td>
                                <td>@character.CreationDate</td>
                                <td>
                                    <button class="btn btn-primary" formmethod="GET" formaction="/characters/view/@character.Id">Edit</button>
                                    <button class="btn btn-danger" formmethod="POST" formaction="/characters/delete/@character.Id">Delete</button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createCharacterModal">Create Character</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>